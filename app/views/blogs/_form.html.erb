<%= render 'flashes' %>
<%= form_for @blog do |f| %>
    <%= f.fields_for :author_attributes do |blogs_fields| %>
        <div class="mb-3">
            <%= f.label "Author Name", class: "form-label" %>
            <%= blogs_fields.text_field :name, { class: "form-control", placeholder: "Author name here.." } %>
        </div>
        <div class="mb-3">
            <%= f.label "Author Email", class: "form-label" %>
            <%= blogs_fields.text_field :email, { class: "form-control", placeholder: "Email address here.." } %>
        </div>
    <% end %>
    <div class="mb-3">
        <%= f.label "Title", class: "form-label" %>
        <%= f.text_field :title, { class: "form-control", placeholder: "Title here.." } %>
    </div>
    <div class="mb-3">
        <%= f.label "Content", class: "form-label" %>
        <%= f.text_area :content, { class: "form-control", placeholder: "Content here.." } %>
    </div>
  <%= f.submit :value => 'Post blog', :class => 'btn btn-lg btn-success btn-flat' %>
<% end %>